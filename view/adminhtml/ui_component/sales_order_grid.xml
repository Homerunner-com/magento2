<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="cr_invoiceCreatePrintLabels">
                <settings>
                    <url path="coolrunner_shipping/order/massInvoiceCreatePrintLabels" />
                    <type>coolrunner_invoice_create_print_labels</type>
                    <label translate="true">CoolRunner: Invoice + Create and Print labels</label>
                </settings>
            </action>
            <action name="cr_createLabels">
                <settings>
                    <url path="coolrunner_shipping/order/massCreateLabels" />
                    <type>coolrunner_createlabels</type>
                    <label translate="true">CoolRunner: Create labels</label>
                </settings>
            </action>
            <action name="cr_printLabels">
                <settings>
                    <url path="coolrunner_shipping/order/massPrintLabels" />
                    <type>coolrunner_printlabels</type>
                    <label translate="true">CoolRunner: Print labels</label>
                </settings>
            </action>
        </massaction>
    </listingToolbar>
</listing>
